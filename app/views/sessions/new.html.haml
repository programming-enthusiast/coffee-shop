%main
  %header
    %h3 Login
  %section{class: 'form'}
    = form_tag '/login', class: 'form-body' do
      .form-group
        = label_tag(:email, "Email", class:'sr-only required')
        = text_field_tag(:email, nil, class:'form-control', placeholder: 'Email')
      .form-group
        = label_tag(:password, "Password", class:'sr-only required')
        = text_field_tag(:password, nil, class:'form-control', type: 'password', placeholder: 'Password')
      %footer
        = submit_tag "Login"