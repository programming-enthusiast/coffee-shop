%div{class: "item-#{@item.id} item large" }
  = item_image(@item, :large, class: 'img-box-large')
  %div{class: 'item-info'}
    %h1{class: 'center-block text-center'}
      = @item.name
    %p
      %div{class: 'center-block text-center' }
        = @item.description
    %h3= number_to_currency(@item.price)
    %footer
      = link_to 'Edit', edit_admin_item_path(@item), class: 'btn btn-xs btn-success' if current_admin?
      = render partial: "items/#{@item.status}", locals: {item: @item}
